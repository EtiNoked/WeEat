<%= link_to("<< Back to List", restaurants_path, :class => 'back-link') %>

<div class="restaurant show">
  <h2>Show Restaurant</h2>

  <table summary="Restaurant detail view">
    <tr>
      <th>Name</th>
      <td><%= @restaurant.name %></td>
    </tr>
    <tr>
      <th>Cuisine</th>
      <td><%= @restaurant.cuisine.name %></td>
    </tr>
    <tr>
      <th>Rating</th>
      <td><%= @restaurant.rating %></td>
    </tr>
    <tr>
      <th>Accept 10bis?</th>
      <td><%= @restaurant.ten_bis ? 'true' : 'false' %></td>
    </tr>
    <tr>
      <th>Address</th>
      <td><%= @restaurant.address%></td>
    </tr>
    <tr>
      <th>Delivery Time</th>
      <td><%= @restaurant.delivery_time %></td>
    </tr>
  </table>

  <br />
  <br />

  <p> <%= link_to("Add review", new_review_path(:restaurant_id => @restaurant.id)) %> </p>
  <p> <%= link_to("Show reviews", reviews_path(:restaurant_id => @restaurant.id)) %> </p>



</div>