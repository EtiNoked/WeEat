<%= link_to("<< Back to List", restaurants_path, :class => 'back-link') %>

<div class="restaurant delete">
  <h2>Delete Restaurant</h2>

  <%= form_for(@restaurant, :method => 'delete') do |f| %>

    <p>Are you sure you want to permanently delete this restaurant?</p>

    <p class="reference-name"><%= f.object.name %></p>

    <div class="form-buttons">
      <%= f.submit("Delete Restaurant") %>
    </div>

  <% end %>
</div>